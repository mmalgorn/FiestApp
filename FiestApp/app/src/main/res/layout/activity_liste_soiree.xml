<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="andoird.fiestapp.Activity_MainActivity2">

    <FrameLayout
        android:id="@+id/content_autre"
        android:layout_width="368dp"
        android:layout_height="0dp"
        android:layout_weight="0.32"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <Button
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/com_facebook_button_background"
                android:text="Déconnection"
                android:textColor="@color/cardview_light_background" />


            <TextView
                android:id="@+id/match_autre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Liste des soirées"
                android:textAlignment="center" />

            <ListView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/match_autre"></ListView>
        </LinearLayout>

    </FrameLayout>


</android.support.constraint.ConstraintLayout>

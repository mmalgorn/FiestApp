<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="andoird.fiestapp.ActivitySoirees">

    <ImageView
        android:id="@+id/couleur"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:color/holo_blue_bright" />

    <TextView
        android:id="@+id/nom_ami"
        android:layout_width="146dp"
        android:layout_height="30dp"
        android:text="Titre de la soirÃ©e"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/couleur"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/heure"
        android:layout_width="88dp"
        android:layout_height="34dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="0dp"
        android:text="Heure"
        android:textAlignment="textEnd"
        app:layout_constraintLeft_toRightOf="@+id/nom_ami"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/couleur"
        app:layout_constraintTop_toTopOf="@+id/couleur"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/localisation"
        android:layout_width="146dp"
        android:layout_height="31dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Localisation"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nom_ami" />

</android.support.constraint.ConstraintLayout>

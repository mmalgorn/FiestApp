<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="andoird.fiestapp.ActivitySoiree">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="150dp"
        app:srcCompat="@android:color/holo_blue_bright"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/titre_soiree"
        android:layout_width="232dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:text="Titre Soiree"
        android:textAlignment="viewStart"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_goneMarginBottom="0dp"
        app:layout_goneMarginLeft="0dp"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/localisation"
        android:layout_width="375dp"
        android:layout_height="41dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:text="Localisation"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/valider"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp" />

    <TextView
        android:id="@+id/Description"
        android:layout_width="373dp"
        android:layout_height="141dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="8dp"
        android:text="Description"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heure"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp" />

    <TextView
        android:id="@+id/heure"
        android:layout_width="375dp"
        android:layout_height="41dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="8dp"
        android:text="Heure"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/localisation"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp" />

    <Button
        android:id="@+id/refuser"
        android:layout_width="88dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_close_black_24dp"
        app:layout_constraintHorizontal_bias="0.751"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/valider"
        android:layout_width="88dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_done_black_24dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintRight_toLeftOf="@+id/refuser"
        android:layout_marginRight="116dp"
        android:layout_marginEnd="116dp" />

</android.support.constraint.ConstraintLayout>

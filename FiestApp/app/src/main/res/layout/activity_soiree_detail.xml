<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="andoird.fiestapp.activity_soiree_detail">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="239dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:context="andoird.myapplication.activity_soiree_detail" />

            <TextView
                android:id="@+id/localisation"
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:text="Localisation" />

            <TextView
                android:id="@+id/heure"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:text="Heure" />

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:text="descirption" />

            <Button
                android:id="@+id/changer_etat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Changer son Ã©tat" />

        </LinearLayout>

    </ScrollView>
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/barre_menu"
        />

</android.support.constraint.ConstraintLayout>

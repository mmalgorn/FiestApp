<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="andoird.fiestapp.ActivityReglages">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:text="Créer sa soirée"
            android:textAlignment="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/date_debut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Date de début "
            android:inputType="date" />

        <EditText
            android:id="@+id/date_fin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Date de fin"
            android:inputType="date"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/nom_soiree"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:layout_marginRight="16dp"
            android:ems="10"
            android:hint="Nom de la soirée"
            android:inputType="text"
            app:layout_constraintRight_toRightOf="parent" />

        <EditText
            android:id="@+id/latitude"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:layout_marginRight="16dp"
            android:ems="10"
            android:hint="latitude"
            android:inputType="number"
            app:layout_constraintRight_toRightOf="parent" />

        <EditText
            android:id="@+id/longitude"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:layout_marginRight="16dp"
            android:ems="10"
            android:hint="longitude"
            android:inputType="number"
            app:layout_constraintRight_toRightOf="parent" />



        <Button
            android:id="@+id/creation_invitation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="créer la soirée et inviter des gens" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="andoird.fiestapp.ActivityReglages">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="444dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/date_debut"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:ems="10"
                android:hint="Date de début de soirée"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/date_fin"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:ems="10"
                android:hint="Date de fin de soirée"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/nom_soiree"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:ems="10"
                android:hint="Nom de la soirée"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/position_latitude"
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:ems="10"
                android:hint="latitude"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/position_longitude"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:ems="10"
                android:hint="longitude"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/creation_invitation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="créer la soirée et inviter des gens" />

        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="310dp"
        android:layout_height="24dp"
        android:layout_marginTop="4dp"
        android:text="Créer sa soirée"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
